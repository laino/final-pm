{
    "applications": [{
        "name": "app",
        "ready-on": "message",
        "run": "./../apps/sample-app.js"
    }, {
        "name": "app-listen",
        "ready-on": "listen",
        "run": "./../apps/sample-app.js"
    }, {
        "name": "app-instant",
        "ready-on": "instant",
        "run": "./../apps/sample-app.js"
    }, {
        "name": "crashingApp",
        "ready-on": "message",
        "run": "./../apps/crashing-app.js"
    }, {
        "name": "neverStarts",
        "ready-on": "message",
        "start-timeout": 3000,
        "max-instances": 2,
        "run": "./../apps/never-starting-app.js"
    }, {
        "name": "neverStops",
        "ready-on": "message",
        "stop-timeout": 3000,
        "run": "./../apps/never-stopping-app.js"
    }, {
        "name": "zombie",
        "ready-on": "message",
        "run": "./../apps/zombie.js",
        "kill-signal": "SIGTERM",
        "start-timeout": 500
    }]
}
